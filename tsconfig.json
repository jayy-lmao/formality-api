{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2016",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/test*/",
    "./node_modules"
  ]
}